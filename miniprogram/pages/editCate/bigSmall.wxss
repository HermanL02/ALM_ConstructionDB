.weui-input {
  border: 2px solid #3498db;  /* 边框宽度，样式和颜色 */
  border-radius: 5px;  /* 圆角 */
  padding: 5px ;  /* 内边距 */
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);  /* 阴影 */
  transition: border-color 0.3s ease;  /* 过渡效果 */
}

/* 当输入框获得焦点时改变边框颜色 */
.weui-input:focus {
  border-color: #3abb5a;
}

/* 自定义华丽的按钮样式 */
.fancy-button {
  background: linear-gradient(to right, #3498db, #2980b9);  /* 渐变背景 */
  color: white;  /* 文字颜色 */
  padding: 10px 20px;  /* 内边距 */
  border-radius: 25px;  /* 圆角 */
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);  /* 阴影 */
  font-size: 16px;  /* 字体大小 */
  font-weight: bold;  /* 字体加粗 */
  transition: all 0.3s ease;  /* 过渡效果 */
}

/* 按钮按下时的样式 */
.fancy-button:active {
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  transform: scale(0.98);  /* 稍微缩小 */
}
