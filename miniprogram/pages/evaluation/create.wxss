/* evaluation/create.wxss */

.page {
  background: #f6f7fb; /* 添加一个轻微的灰色背景来增加对比度 */
  padding: 20px; /* 给整个页面增加一些内部间距 */
}

.weui-cells__title {
  font-weight: 500; 
  margin-bottom: 15px; 
  font-size: 20px;
  border-bottom: 1px solid #eee; /* 细边框 */
  padding-bottom: 10px; /* 边框和文字之间的距离 */
}

.star-rating {
  font-size: 30px; /* 增大星星的大小 */
  margin: 20px 0;
  display: flex; 
  justify-content: center; /* 将星星居中显示 */
}

.star, .active-star {
  margin: 0 15px; /* 增加星星之间的间距 */
  transition: color 0.3s ease; /* 添加一个过渡效果 */
}

.star {
  color: #ccc;
}

.star:hover {
  color: #aaa; /* 鼠标悬停时的颜色 */
}

.active-star {
  color: #fbbd08;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.1); /* 给活动星星添加一点阴影 */
}

.tag {
  background: #007BFF; 
  border-radius: 20rpx; /* 增加圆角 */
  color: white;
  display: inline-block;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 20px;
  padding: 8rpx 16rpx;
  box-shadow: 2px 2px 5px rgba(0,0,0,0.1); /* 添加阴影 */
}

.weui-textarea {
  background: white; 
  border-radius: 10px; /* 添加圆角 */
  padding: 10px; /* 文本域内部的间距 */
  box-shadow: 2px 2px 5px rgba(0,0,0,0.1); /* 添加阴影 */
}

.checkbox-item {
  margin-top: 20px; 
  padding: 10px;
  background: white;
  border-radius: 10px;
  box-shadow: 2px 2px 5px rgba(0,0,0,0.1); /* 添加阴影 */
}

.weui-btn_primary {
  margin-top: 20px; 
  border-radius: 30px; /* 更大的圆角 */
  box-shadow: 2px 2px 10px rgba(0,0,0,0.2); /* 按钮阴影 */
  background-image: linear-gradient(to right, #005CFF, #007BFF); /* 使用渐变背景 */
}
