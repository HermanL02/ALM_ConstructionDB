.evaluationItem {
  padding: 20rpx;
  margin-bottom: 30rpx;
  background: #ffffff;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.evaluationItem:hover {
  box-shadow: 0px 6px 14px rgba(0, 0, 0, 0.2);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 2px solid #e6e6e6;
}

.userInfo {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.dateInfo {
  font-size: 24rpx;
  color: #999;
}

.tag {
  background: linear-gradient(90deg, #007BFF, #00FFCC);
  border-radius: 30rpx;
  color: white;
  display: inline-block;
  font-size: 28rpx;
  font-weight: 700;
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.2);
}

.comment {
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #444;
}
