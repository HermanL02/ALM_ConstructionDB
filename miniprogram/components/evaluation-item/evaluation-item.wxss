.evaluationItem {
  margin-top: 48rpx;
}

.evaluationItem .header {
  align-items: flex-start;
  display: flex;
  justify-content: space-between;
}
/* 基于你提供的WXML，以下是样式 */

/* 整个评价项的样式 */
.evaluationItem {
  border: 1px solid #e5e5e5; /* 边框 */
  border-radius: 10rpx;      /* 边框圆角 */
  padding: 16rpx;            /* 内边距 */
  margin: 16rpx 0;           /* 外边距，上下有16rpx，左右无 */
  background-color: #fff;   /* 背景色 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1); /* 阴影效果 */
}

/* 标题部分 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5; /* 为头部添加一个底部边框 */
  padding-bottom: 12rpx;   /* 头部底部内边距 */
  margin-bottom: 12rpx;    /* 头部底部外边距 */
}

/* 用于排列的通用flex容器 */
.flex {
  display: flex;
}

/* items-center将使其子项目垂直居中 */
.items-center {
  align-items: center;
}

/* flex-col使子项目垂直堆叠 */
.flex-col {
  flex-direction: column;
}

/* 左边距 */
.m-l-16 {
  margin-left: 16rpx;
}

/* 通用字体样式 */
.font-28 {
  font-size: 28rpx;
}

.font-26 {
  font-size: 26rpx;
}

.c-333 {
  color: #333;
}

.c-666 {
  color: #666;
}

.font-500 {
  font-weight: 500;
}

/* 评论内容部分 */
.content {
  padding: 16rpx;           /* 内边距 */
}

.message {
  font-size: 30rpx;        /* 字体大小 */
  color: #444;             /* 字体颜色 */
  line-height: 1.5;        /* 行高 */
}

.tag {
  background: #ff0000;
  border-radius: 8rpx;
  color: #203fcc;
  display: inline-block;
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 12rpx;
  padding: 6rpx 10rpx;
}
.evaluationItem .content {
  color: #333;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  margin-top: 12rpx;
  padding-left: 80rpx;
}

.evaluationItem .content .comments {
  background: #f5f6f7;
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 24rpx 32rpx;
}

.evaluationItem .content .comments .item {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.evaluationItem .content .comments .item:last-child {
  margin-bottom: 0;
}

.imgBox {
  display: flex;
  flex-wrap: wrap;
}

.imgBox .imgItem {
  padding-bottom: 25%;
  position: relative;
  width: 25%;
}

.imgBox .imgItem .img {
  height: 90%;
  left: 0;
  overflow: hidden;
  position: absolute;
  top: 0;
  width: 90%;
}
