<view class="page">
    <company-item company="{{company}}" isInfo="{{true}}" ></company-item>
    
    <view class="card desc m-b-24">
        <text class="header">详细介绍</text>
        <view class="m-t-70 w-full">
            <text>{{company.companyIntro}}</text>
        </view>
    </view>
    <view class="card desc m-b-24">
        <text class="header">公司地址</text>
        <view class="m-t-70 w-full">
            <text>{{company.companyAddress}}</text>
        </view>
    </view>
    <view class="card desc m-b-24">
        <text class="header">公司联系人[点击右下角图标一建拨打]</text>
        <view class="m-t-70 w-full">
            <text>{{company.contactPerson}}</text>
        </view>
    </view>
    <view class="card desc m-b-24">
        <text class="header">公司引荐人</text>
        <view class="m-t-70 w-full">
            <text>{{company.reference}} {{company.referencePhone}}</text>
        </view>
    </view>

    <view class="card m-b-24 p-b-2" wx:if="{{relatedProject}}">
        <view class="font-500 font-32">相关项目</view>
        <project-item project="{{relatedProject}}" showFooter="{{false}}"></project-item>
    </view>
    
    <view class="card m-b-24">
        <view class="font-500 font-32">评论（{{totalEvaluation}}）</view>
  
        <block wx:for="{{company.evaluations}}" wx:key="index">
          <evaluation-item evaluation="{{item}}"></evaluation-item>
        </block>
    </view>
    
    <view class="footer">
        <view bindtap="onScore" class="footer-btn w-full">立即评价</view>
    </view>
    <!-- 这里我们只是使用了电话图标，你可以选择使用图片或其他图标库中的图标 -->
    <!-- pages/index/index.wxml -->
    <view class="floating-phone" bindtap="makePhoneCall">
      📞
    </view>


    <zz-drag-button bind:btnClick="onCall" existTabBar="{{true}}"></zz-drag-button>
</view>
